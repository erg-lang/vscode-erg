{
	"name": "vscode-erg",
	"displayName": "vscode-erg",
	"description": "Erg language support for Visual Studio Code",
	"publisher": "erg-lang",
	"version": "0.1.11",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Programming Languages"
	],
	"icon": "images/icon.jpg",
	"repository": {
		"type": "git",
		"url": "https://github.com/erg-lang/vscode-erg.git"
	},
	"main": "./dist/extension.js",
	"activationEvents": [
		"onLanguage:erg"
	],
	"contributes": {
		"commands": [
			{
				"title": "Restart Language Server",
				"category": "Erg",
				"command": "erg.restartLanguageServer"
			}
		],
		"languages": [
			{
				"id": "erg",
				"aliases": [
					"Erg",
					"erg"
				],
				"extensions": [
					".er"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "erg",
				"scopeName": "source.erg",
				"path": "./syntaxes/erg.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "vscode-erg",
			"properties": {
				"vscode-erg.ergpath.path": {
					"type": "string",
					"default": "",
					"description": "Path to `.erg` directory"
				},
				"vscode-erg.executablePath": {
					"type": "string",
					"default": "",
					"description": "Path to `erg` executable"
				},
				"vscode-erg.lsp.inlayHints": {
					"type": "boolean",
					"default": true,
					"description": "Enable inlay hints"
				},
				"vscode-erg.lsp.semanticTokens": {
					"type": "boolean",
					"default": true,
					"description": "Enable semantic tokens"
				},
				"vscode-erg.lsp.hover": {
					"type": "boolean",
					"default": true,
					"description": "Enable hover"
				}
			}
		}
	},
	"scripts": {
		"vscode:publish": "vsce publish",
		"vscode:prepublish": "npm run package",
		"vscode:package": "vsce package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"type-check": "tsc --noEmit",
		"lint": "rome check .",
		"format": "rome format .",
		"lint:fix": "rome check --apply .",
		"lint:fix-suggested": "rome check --apply-suggested .",
		"format:fix": "rome format --write ."
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.x",
		"@types/vscode": "^1.70.0",
		"@vscode/test-electron": "^2.2.1",
		"glob": "^8.0.3",
		"mocha": "^10.2.0",
		"rome": "^10.0.1",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"lint-staged": {
		"*": "rome format --write"
	}
}
